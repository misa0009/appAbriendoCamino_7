<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8F5"
    tools:context=".Fragmentos.Fragment_Listado_Tutores">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etTutores"
                android:layout_width="577dp"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Introduce el filtro"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/spTutores"
                android:layout_width="531dp"
                android:layout_height="58dp"
                android:layout_weight="1" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <Switch
                android:id="@+id/swTutores"
                android:layout_width="249dp"
                android:layout_height="34dp"
                android:layout_marginStart="484dp"
                android:layout_marginLeft="484dp"
                android:layout_marginTop="16dp"
                android:text="Sólo dentro de las instalaciones"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnRegistrarTutor"
                android:layout_width="297dp"
                android:layout_height="63dp"
                android:text="Añadir Tutor"
                app:backgroundTint="#085E0B"
                app:icon="@drawable/ic_agrupo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView
            android:id="@+id/lvTutores"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


        </ListView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>