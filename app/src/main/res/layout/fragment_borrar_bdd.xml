<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.Fragment_BorrarBD">

    <Button
        android:id="@+id/btnBorrarCorreo"
        android:layout_width="467dp"
        android:layout_height="142dp"
        android:layout_marginTop="156dp"
        android:background="#155501"
        android:text="Borrar Direccion de Correo"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:backgroundTint="#167A00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBorrarToda"
        android:layout_width="467dp"
        android:layout_height="142dp"
        android:layout_marginTop="612dp"
        android:background="#155501"
        android:text="borrar toda la base de datos"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:backgroundTint="#167A00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBorrarFechas"
        android:layout_width="467dp"
        android:layout_height="142dp"
        android:layout_marginTop="396dp"
        android:layout_weight="1"
        android:background="#167A00"
        android:text="borrar por fecha"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:backgroundTint="#167A00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>